
<h1>Sales listing page</h1>

<table>
	<thead>
		<tr>
			<th>#</th>
			<th>Sales</th>
			<th colspan="3">Action</th>
		</tr>
	</thead>
	<tbody>
		<% @sales.each do |sale| %>
    	<tr>
    		<td><%= sale.id %></td>
    		<td><%= sale.client.name %></td>
    		<td><%= link_to 'Show', admins_backoffice_sale_path(sale) %></td>
    		<td><%= link_to 'Edit', edit_admins_backoffice_sale_path(sale) %></td>
    		<td><%= link_to 'Delete', admins_backoffice_sale_path(sale), method: :delete, data: { confirm: 'Are you sure?'} %></td>
    	</tr>
		<% end %>
	</tbody>
</table>
<p>
	<%= link_to 'Home page', root_path %> |
	<%= link_to 'Create new sale', new_admins_backoffice_sale_path %>
</p>