
<h1>Clients listing page</h1>

<table>
	<thead>
		<tr>
			<th>Name</th>
			<th>Email</th>
			<th>Birthdate</th>
			<th colspan="3">Action</th>
		</tr>
	</thead>
	<tbody>
		<% @clients.each do |client| %>
    	<tr>
    		<td><%= client.name %></td>
    		<td><%= client.email %></td>
    		<td><%= client.birthdate %></td>
    		<td><%= link_to 'Show', admins_backoffice_client_path(client) %></td>
    		<td><%= link_to 'Edit', edit_admins_backoffice_client_path(client) %></td>
    		<td><%= link_to 'Delete', admins_backoffice_client_path(client), method: :delete, data: { confirm: 'Are you sure?'} %></td>
    	</tr>
		<% end %>
	</tbody>
</table>
<p>
	<%= link_to 'Home page', root_path %> |
	<%= link_to 'Create new client', new_admins_backoffice_client_path %>
</p>