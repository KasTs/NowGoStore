<% if @client.errors.any? %>
	<h2>The following errors prevented the client from being saved:</h2>
	<ul>
		<% @client.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
		<% end %>
	</ul>
<% end %>
<%= form_with(model: [:admins_backoffice, @client], local: true) do |f| %>
	<p>
		<%= f.label :name %><br>
		<%= f.text_field :name %>
	</p>
	<p>
		<%= f.label :email %><br>
		<%= f.text_area :email %>
	</p>
	
	<p>
		<%= f.label :birthdate %><br>
		<%= f.date_field :birthdate %>
	</p>
	
	
	<p>
		<%= f.submit %>
	</p>
<% end %>