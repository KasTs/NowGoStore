<h1>Products listing page</h1>
<table>
	<thead>
		<tr>
			<th>Name</th>
			<th>Description</th>
			<th>Price</th>
			<th colspan="3">Action</th>
		</tr>
	</thead>
	<tbody>
		<% @products.each do |product| %>
    	<tr>
    		<td><%= product.name %></td>
    		<td><%= product.description %></td>
    		<td><%= product.price %></td>
    		<td><%= link_to 'Show', admins_backoffice_product_path(product) %></td>
    		<td><%= link_to 'Edit', edit_admins_backoffice_product_path(product) %></td>
    		<td><%= link_to 'Delete', admins_backoffice_product_path(product), method: :delete, data: { confirm: 'Are you sure?'} %></td>
    	</tr>
		<% end %>
	</tbody>
</table>
<p>
	<%= link_to 'Home page', root_path %> |
	<%= link_to 'Create new product', new_admins_backoffice_product_path %>
</p>